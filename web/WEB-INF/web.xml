<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>RectangleController</servlet-name>
        <servlet-class>Controller.RectangleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CircleController</servlet-name>
        <servlet-class>Controller.CircleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TriangleController</servlet-name>
        <servlet-class>Controller.TriangleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RectangleController</servlet-name>
        <url-pattern>/RectangleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CircleController</servlet-name>
        <url-pattern>/CircleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TriangleController</servlet-name>
        <url-pattern>/TriangleController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
